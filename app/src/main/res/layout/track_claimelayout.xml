<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/liteBlueSplash">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="@color/DarkerVarient"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:src="@drawable/backarrow" />
                <TextView
                    android:id="@+id/textViewd4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:text="Claim Details" />
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/pureBlack"
                    android:src="@drawable/menu" />


            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>


    <ListView
        android:padding="15dp"
        android:id="@+id/androidlisttrack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarSize="8dp"
        android:scrollbarThumbVertical="@color/buttomBlue"
        android:scrollbars="vertical"
        android:visibility="visible"
        android:background="@color/White"></ListView>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/simpleProgressBar1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="visible"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

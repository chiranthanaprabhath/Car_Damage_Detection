<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andorid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/Background">

    <RelativeLayout
        android:layout_weight="0.7"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@android:color/white"
                android:background="@color/DarkerVarient"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:src="@drawable/backarrow" />
                    <TextView
                        android:id="@+id/topclaimeNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="@color/White"
                        android:text="waiting.." />
                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/pureBlack"
                        android:src="@drawable/menu" />


                </FrameLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/Background"
                ></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/liteBlueSplash"
                android:id="@+id/showImage">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/White"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/androidlistdetectindetails"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:fadeScrollbars="false"
                        android:scrollbarSize="8dp"
                        android:scrollbarThumbVertical="@color/buttomBlue"
                        android:scrollbars="vertical"
                        android:visibility="visible"></ListView>

                </LinearLayout>
                <TextView
                    android:id="@+id/claimeNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pureBlack"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"/>


            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/simpleProgressBar2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="visible"
            android:layout_marginTop="300dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.9"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="3dp"
                    android:background="@color/Background"
                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Damage Type  : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/claimetypeindetals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/liteBlack"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/Background"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date and Time : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/Damgetypeindetais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/liteBlack"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.." />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/Background"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimation  : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/Estimationindetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.."
                        android:textColor="@color/liteBlack"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/Background"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status  : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/statusindetals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/liteBlack"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.." />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="end"
                        android:layout_marginRight="20dp">
                        <Button
                            android:id="@+id/moreDetals"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/round_button_layout"

                            android:textSize="14dp"
                            android:textColor="@color/liteBlack"
                            android:layout_alignParentRight="true"
                            android:text="More" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/Background"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Claim Amount : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/clameamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/liteBlack"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.." />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/Background"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@color/liteBlueSplash">
                        <ImageView
                            android:background="@drawable/round_button_layout"
                            android:scaleType="fitEnd"
                            android:padding="10dp"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/addfile"
                            android:src="@drawable/addfile"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:background="@color/liteBlueSplash"
                            android:gravity="center"
                            android:text="Add Documents"
                            android:textStyle="bold"
                            android:textColor="@color/liteBlack"
                            android:textSize="16dp"
                            />
                    <Button
                        android:id="@+id/okindetails"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="OK"
                        android:textColor="@color/White"
                        android:textSize="10dp"
                        android:background="@drawable/round_button_layout"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"></Button>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>


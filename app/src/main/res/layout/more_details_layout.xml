<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andorid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/pureWhite">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="@color/DarkerVarient"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:src="@drawable/backarrow" />
            <TextView
                android:id="@+id/textViewd4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:text="More Details" />
            <ImageView
                android:id="@+id/share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:textColor="@color/pureBlack"
                android:src="@drawable/menu" />


        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/pureWhite"></LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Background">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estimation : "
                        android:layout_alignParentLeft="true"
                        android:textSize="20dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                </LinearLayout>
                <LinearLayout
                    android:background="@color/liteBlack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACR : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/acr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/liteBlack"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount Payable  : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/amountPayable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.."
                        android:textColor="@color/liteBlack"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bald Type  : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/bladtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/liteBlack"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.." />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excesses : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/excesses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/liteBlack"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.." />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other Deductions  : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/otherDetection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.."
                        android:textColor="@color/liteBlack"
                        android:textSize="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Under Insurance : "
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                    <TextView
                        android:id="@+id/underInsurace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="@color/liteBlack"
                        android:layout_alignParentRight="true"
                        android:text="Waiting.." />
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salvage Parts: "
                        android:layout_alignParentLeft="true"
                        android:textSize="20dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:id="@+id/slvageParts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="10dp"
                        android:text="waiting"
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                </LinearLayout>
                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/liteBlueSplash">
                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/reject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reason For Reject: "
                        android:layout_alignParentLeft="true"
                        android:textSize="20dp"
                        android:textColor="@color/pureBlack"
                        android:layout_marginRight="15dp"/>

                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="25dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="@color/liteBlueSplash">
                        <TextView
                            android:visibility="invisible"
                            android:id="@+id/rejectDetatils"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="10dp"
                            android:text="waiting"
                            android:layout_alignParentLeft="true"
                            android:textSize="15dp"
                            android:textColor="@color/pureBlack"
                            android:layout_marginRight="15dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andorid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/White">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="@color/DarkerVarient"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:src="@drawable/backarrow" />
                <TextView
                    android:id="@+id/textViewd4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/White"
                    android:text="Digital ID" />
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/pureBlack"
                    android:src="@drawable/menu" />


            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/White"
            android:id="@+id/showImage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/White"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/PolicyNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Policy No: "
                    android:textStyle="bold"
                    android:textColor="@color/liteBlack"
                    android:textSize="22dp"
                    android:layout_marginBottom="30dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                <ImageView
                    android:id="@+id/person"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/person">
                </ImageView>
                <ProgressBar
                        android:id="@+id/simpleProgressBar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="visible"
                        android:layout_marginTop="55dp"
                    android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Name: "
                    android:textStyle="bold"
                    android:textColor="@color/liteBlack"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/IdNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ID No: "
                    android:textStyle="bold"
                    android:textColor="@color/liteBlack"
                    android:textSize="18dp"
                    android:layout_marginBottom="10dp"/>


            </LinearLayout>




        </LinearLayout>
    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:text="Period of Cover: "
            android:textStyle="bold"
            android:textColor="@color/liteBlack"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:text="Sum Insured: "
            android:textStyle="bold"
            android:textColor="@color/liteBlack"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:text="Make and Model: "
            android:textColor="@color/liteBlack"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView15"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:text="Chassis Numbre:"
            android:textStyle="bold"
            android:textColor="@color/liteBlack"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Vehical Number: "
            android:textStyle="bold"
            android:textColor="@color/liteBlack"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:textColor="@color/liteBlack"
            android:text="Contact Number: "
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:text="Wating..."
            android:textColor="@color/liteBlack"
            app:layout_constraintLeft_toRightOf="@+id/textView10"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Wating..."
            android:layout_margin="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/liteBlack"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/marriage"
            app:layout_constraintLeft_toRightOf="@+id/textView16" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/marriage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:textColor="@color/liteBlack"
            android:text="Wating..."
            app:layout_constraintLeft_toRightOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/gender" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Wating..."
            android:textColor="@color/liteBlack"
            app:layout_constraintLeft_toRightOf="@+id/textView11"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mobileNumber" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:textColor="@color/liteBlack"
            android:text="Wating..."
            app:layout_constraintLeft_toRightOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/mobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Wating..."
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/liteBlack"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/occupation"
            app:layout_constraintLeft_toRightOf="@+id/textView22" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/approved_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Wating..."
            android:textColor="@color/liteBlack"
            app:layout_constraintLeft_toRightOf="@+id/textView26"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Wating..."
            app:layout_constraintLeft_toRightOf="@+id/textView27"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/liteBlack"
            app:layout_constraintTop_toBottomOf="@+id/dob" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Color: "
            android:textStyle="bold"
            android:textColor="@color/liteBlack"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView27"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Year Of Make: "
            android:textColor="@color/liteBlack"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Hire Purchase/Lease: "
            android:textColor="@color/liteBlack"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:textSize="16dp"
            android:id="@+id/education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:textColor="@color/liteBlack"
            android:text="Wating..."
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintLeft_toRightOf="@+id/textView5"
            android:layout_marginLeft="8dp" />

        <Button
            android:background="@drawable/round_button_layout"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@+id/approved_by"
            android:layout_width="match_parent"
            android:text="Manage Policy"
            android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

</LinearLayout>



























